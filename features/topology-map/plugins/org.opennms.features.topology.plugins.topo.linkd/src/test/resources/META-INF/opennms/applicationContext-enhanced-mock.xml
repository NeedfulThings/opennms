<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="platformTransactionManager">
        <constructor-arg value="org.springframework.transaction.PlatformTransactionManager"/>
    </bean>
        
    <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="nodeTopologyService">
        <constructor-arg value="org.opennms.netmgt.enlinkd.service.api.NodeTopologyService"/>
    </bean>

    <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="bridgeTopologyService">
        <constructor-arg value="org.opennms.netmgt.enlinkd.service.api.BridgeTopologyService"/>
    </bean>

    <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="cdpTopologyService">
        <constructor-arg value="org.opennms.netmgt.enlinkd.service.api.CdpTopologyService"/>
    </bean>

    <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="isisTopologyService">
        <constructor-arg value="org.opennms.netmgt.enlinkd.service.api.IsisTopologyService"/>
    </bean>

    <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="lldpElementDao">
        <constructor-arg value="org.opennms.netmgt.enlinkd.persistence.api.LldpElementDao"/>
    </bean>
    <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="lldpLinkDao">
        <constructor-arg value="org.opennms.netmgt.enlinkd.persistence.api.LldpLinkDao"/>
    </bean>

   <bean id="lldpTopologyService" class="org.opennms.netmgt.enlinkd.service.impl.LldpTopologyServiceImpl">
      <property name="lldpLinkDao" ref="lldpLinkDao" />
      <property name="lldpElementDao" ref="lldpElementDao" />
   </bean>
   
       <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="ospfElementDao">
        <constructor-arg value="org.opennms.netmgt.enlinkd.persistence.api.OspfElementDao"/>
    </bean>
    <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="ospfLinkDao">
        <constructor-arg value="org.opennms.netmgt.enlinkd.persistence.api.OspfLinkDao"/>
    </bean>
   
   <bean id="ospfTopologyService" class="org.opennms.netmgt.enlinkd.service.impl.OspfTopologyServiceImpl">
      <property name="ospfLinkDao" ref="ospfLinkDao" />
      <property name="ospfElementDao" ref="ospfElementDao" />
   </bean>

    <bean class="org.easymock.EasyMock" factory-method="createNiceMock" primary="true" id="snmpInterfaceDao">
        <constructor-arg value="org.opennms.netmgt.dao.api.SnmpInterfaceDao"/>
    </bean>

    <bean id="databasePopulator" class="org.opennms.features.topology.plugins.topo.linkd.internal.EnhancedLinkdMockDataPopulator">
    </bean>

    <bean id="metricRegistry" class="com.codahale.metrics.MetricRegistry" />

    <bean id="enLinkdTopologyProvider" class="org.opennms.features.topology.plugins.topo.linkd.internal.LinkdTopologyProvider">
        <constructor-arg ref="metricRegistry"/>
        <property name="snmpInterfaceDao" ref="snmpInterfaceDao" />
        <property name="nodeTopologyService" ref="nodeTopologyService" />
        <property name="bridgeTopologyService" ref="bridgeTopologyService" />
        <property name="cdpTopologyService" ref="cdpTopologyService"/>
        <property name="lldpTopologyService" ref="lldpTopologyService"/>
        <property name="ospfTopologyService" ref="ospfTopologyService"/>
        <property name="isisTopologyService" ref="isisTopologyService" />
    </bean>
</beans>

